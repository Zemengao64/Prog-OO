package com.mycompany.somaate1000;

/**IMPRIMIR A SOMA DOS NÚMEROS ATÉ 1000
 *
 * @author Belmont
 */
public class SomaAte1000 {
    public static void main(String[] args){
        int x = 0;
        for (int i=0; i<= 1000; i++){
            x = x + i;
        }
        System.out.println("A soma de 1 até 1000 é: "+x);
    }
    
}
