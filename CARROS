DETRAN
public class Carro{
  privae String placa;
  private String marca;
  private String modelo;
  private String renavan;
  private Pessoa dono;
  private boolean status;   // TRUE = OK  -  FALSE = roubado
  private String cor;
  private int anoModelo, anoFabricacao
  
  Carro {String marca, String modelo, int anoFrabicacao, int anoModelo, String cor, Pessoa dono){
    this.placa = placa;
    this.modelo = modelo;
    this.anoFabricaca = anoFabricacao;
    this.anoModelo = anoModelo;
    this.cor = cor;
    this.status = true;
    this.dono = dono;
  }
  
    public String getPlaca(){
      Retorna a placa
    }  
    public String getMarca(){
      Retorna a marca
    }
    public String getModelo(){
      Retorna o modelo
    }
    public Pessoa getDono(){
      Retorna o dono do carro 
    }
    public String getRenavan(){
      Retorna o renavan
    }
    public int getAnoFabricacao(){
      Retorna ano de fabracação
    }
    public int getAnoModelo(){
      Retorna ano do modelo
    }
    
    public void setPlaca (String renavan){
      Artibui uma placa ao veiculo em caso de veiculo novo
    }
    private void setDono (String Placa){
      atribui um dono ao veículo
    } 
    
    public void pesquisaSituacao (String placa){
      retorna status de um veiculo
    } 
    public void vendaVeiculo (String placa){
      muda o dono do veículo com a placa recebida atraves de setDono
    }
      
